.d-flex.justify-content-between
  div
    h1.d-inline-block.me-2 = "#{resource_language.slug} versions"
    = link_to language_path(resource_language.slug), class: 'align-top me-2', target: :_blank, rel: :noopener do
      span.bi.bi-arrow-up-right-square.fs-2
    = link_to resource_language.source_code_curl, class: 'align-top', target: :_blank, rel: :noopener do
      span.bi.bi-github.fs-2
  = button_to 'Create new version', admin_language_versions_path(resource_language), class: 'btn btn-primary'

table.table.table-striped.my-2
  thead
    tr
      th id
      th Language
      th Result
      th State
      th = sort_link(@search, :created_at)
  tbody
    - @versions.each do |version|
      tr
        td = version.id
        td = version.language.slug
        td = version.result
        td = version.state.humanize
        td = l version.created_at, format: :short
= paginate @versions
